<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="bruzsa.laszlo.dartsapp.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_playerFragment"
            app:destination="@id/playerFragment" />
        <action
            android:id="@+id/action_nav_home_to_nav_cricketFragment"
            app:destination="@id/nav_cricketFragment" />
        <action
            android:id="@+id/action_nav_home_to_nav_darts501Fragment"
            app:destination="@id/nav_darts501Fragment" />
        <action
            android:id="@+id/action_nav_home_to_darts501SinglePlayer"
            app:destination="@id/darts501SinglePlayer" />
    </fragment>

    <fragment
        android:id="@+id/nav_cricketFragment"
        android:name="bruzsa.laszlo.dartsapp.ui.cricket.CricketFragment"
        android:label="CricketFragment"
        tools:layout="@layout/fragment_cricket"/>
    <fragment
        android:id="@+id/nav_darts501Fragment"
        android:name="bruzsa.laszlo.dartsapp.ui.darts501.Darts501Fragment"
        android:label="Darts501Fragment"
        tools:layout="@layout/fragment_darts501"/>
    <fragment
        android:id="@+id/darts501SinglePlayer"
        android:name="bruzsa.laszlo.dartsapp.ui.darts501.Darts501SinglePlayerFragment"
        android:label="fragment_darts501_single_player"
        tools:layout="@layout/fragment_darts501_single_player" />
    <fragment
        android:id="@+id/playerFragment"
        android:name="bruzsa.laszlo.dartsapp.ui.home.player.PlayerFragment"
        android:label="fragment_player_list"
        tools:layout="@layout/fragment_player" >
        <action
            android:id="@+id/action_playerFragment_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>
</navigation>